<section class="card">
  <h2><%= item ? 'Edit Santri' : 'Tambah Santri' %></h2>
  <form method="POST" action="<%= (item ? '/santri/' + item.id + '/edit' : '/santri/new') + '?_csrf=' + csrfToken %>" class="form-grid" enctype="multipart/form-data">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <label>NIS
      <input type="text" name="nis" value="<%= item ? item.nis : '' %>" required />
    </label>
    <label>Nama Lengkap
      <input type="text" name="nama" value="<%= item ? item.nama : '' %>" required />
    </label>
    <label>Kelas/Jurusan
      <input type="text" name="kelas" value="<%= item ? item.kelas : '' %>" />
    </label>
    <label>Kelompok Pesantren
      <input type="text" name="kelompok" value="<%= item ? item.kelompok : '' %>" />
    </label>
    <label>Tanggal Lahir
      <input type="date" name="tgl_lahir" value="<%= item ? (item.tgl_lahir ? new Date(item.tgl_lahir).toISOString().slice(0,10) : '') : '' %>" />
    </label>
    <label>Alamat
      <textarea name="alamat"><%= item ? (item.alamat || '') : '' %></textarea>
    </label>
    <label>Nomor HP Wali
      <input type="text" name="hp_wali" value="<%= item ? (item.hp_wali || '') : '' %>" />
    </label>
    <label>Foto (opsional, JPG/PNG, max 2MB)
      <input type="file" name="foto" accept="image/png,image/jpeg" />
      <% if (item && item.foto_path) { %>
        <img src="/public/<%= item.foto_path %>" alt="Foto Santri" style="max-height:80px;margin-top:6px;border:1px solid #eee;border-radius:6px;" />
      <% } %>
    </label>
    <button type="submit" class="btn-primary">Simpan</button>
  </form>
</section>